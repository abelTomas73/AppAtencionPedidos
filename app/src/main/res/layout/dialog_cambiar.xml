<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"

    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_dialog"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/dialog_txt_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="IP PUBLICADO"
                android:textColor="#ffffff"
                android:padding="1dp"
                android:textStyle="bold"
                android:textSize="20sp" />



        </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/body_dialog_ip"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/dialogIP_bloque1"
            android:layout_marginTop="10dp"

            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            >


            <EditText
                android:id="@+id/dialog_edt_ip"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_text"
                android:gravity="center"

                android:padding="8dp"
                android:textColor="#000000"

                android:textSize="19sp"



                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnAprobarIP"

                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/btn_rounded_color_ip"
                android:text="GUARDAR IP"
                android:textColor="@color/white"

                android:paddingHorizontal="20dp"



                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>