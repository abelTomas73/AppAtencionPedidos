<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardview_item_maquina"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="4dp"

    android:layout_gravity="center"

    app:cardElevation="3dp"

    android:background="@drawable/bg_itemzona"

    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:focusable="true">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book_img_id"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:background="@color/transparent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/book_title_id"
                android:layout_marginTop="5dp"
                android:textColor="#2d2d2d"
                android:textSize="16dp"
                android:gravity="top|bottom"
                android:layout_weight="1"
                android:height="20dp"


                android:layout_height="wrap_content"

                android:text="Maquinas"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/descp_maquinas"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_descripcion"
                android:textSize="@dimen/badge_text_size_notificacion_basico"
                android:gravity="center"
                android:layout_weight="1"
                android:height="20dp"


                android:layout_height="wrap_content"

                android:text="Maquina"
                android:layout_width="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:gravity="end"

            android:layout_height="wrap_content">
            <Button
                android:visibility="gone"
                android:id="@+id/btn_cancelarPedido"
                android:textSize="12sp"
                android:text="Cancelar\nPedido"
                android:textAllCaps="false"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btn_finalizarPedido"
                android:visibility="gone"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:text="Finalizar\nPedido"
                android:textColor="@color/c_darkliver"

                android:background="@color/c_sunsetorange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.design.card.MaterialCardView>
