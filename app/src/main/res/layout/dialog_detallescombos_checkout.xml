<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:padding="@dimen/espacio_norma_1"

    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded"


        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/espacio_norma_1"
            android:layout_height="match_parent">
            <TextView
                android:text="Productos"
                android:textColor="@color/c_darkliver"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/espacio_norma_1"
            android:layout_marginRight="@dimen/espacio_norma_1"

            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/detallescombos_productos_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/c_darkliver"
                android:text="1 x " />
            <TextView

                android:id="@+id/detallescombos_productos_nombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" Coca Cola 500ml" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/pedidosdetallesCheckoutlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none" />
    </LinearLayout>
</RelativeLayout>